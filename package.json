{
    "name": "my-first-web",
    "version": "1",
    "main": "server.js",
    "author": "PoolOfDeath20",
    "license": "MIT",
    "scripts": {
        "start": "cd backend && yarn start",
        "dev": "nodemon --exec backend/lib/server.js",
        "install-both": "concurrently \"cd frontend && yarn\" \"cd backend && yarn\"",
        "build-backend": "cd backend && yarn build",
        "build-frontend": "cd frontend && yarn build",
        "build": "yarn install-both && concurrently \"yarn build-frontend\" \"yarn build-backend\"",
        "sync-start": "concurrently \"cd frontend && yarn start\" \"cd backend && yarn start\""
    },
    "devDependencies": {
        "concurrently": "^6.2.2",
        "nodemon": "^2.0.13"
    }
}
