{
    "name": "my-first-web",
    "version": "1",
    "main": "server.js",
    "author": "PoolOfDeath20",
    "license": "MIT",
    "scripts": {
        "start": "cd backend && yarn start",
        "dev": "nodemon --exec backend/src/server.js",
        "install-both": "cd backend && yarn && cd ../frontend && yarn",
        "build": "yarn install-both && cd frontend && yarn build",
        "sync-start": "concurrently \"cd frontend && yarn start\" \"cd backend && yarn start\""
    },
    "devDependencies": {
        "concurrently": "^6.2.2",
        "nodemon": "^2.0.13"
    }
}
