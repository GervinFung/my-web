<div id='language-chooser'>
    <select name='languages' id='languages'>
        {{#languageSelector portfolioLang languages}}{{this}}{{/languageSelector}}
    </select>
</div>
<div class='content-wrapper'>
    <div class='portfolio-items-wrapper'>
    {{#each portfolioQueried}}
        <div class='portfolio-item-wrapper'>
            <div class='portfolio-img-background' style='background-image:url(images/portfolio_background/{{path}}.jpg)'> </div>
            <div class='img-text-wrapper'>
                <div class='logo-wrapper'>
                    <a class = 'portfolio-link' target='blank' rel='noopener noreferrer' href='https://github.com/GervinFung/{{path}}'><img src='images/logos/{{path}}.jpg' alt='{{path}}.jpg'></a>
                </div>
                <div class='subtitle'>{{caption}}</div>
            </div>
        </div>
    {{/each}}
    </div>
</div>
{{#dots numberOfPage}}{{this}}{{/dots}}
{{#buttons numberOfPage}}{{this}}{{/buttons}}
<div id='surprised'>
    <span id='close-msg'>&times;</span>
    <div id='surprised-content'>
        <img src='images/others/surprised.gif' alt='surprised.gif'>
        <h1 class='message' id='wow-msg'>WOW</h1>
        <p class='message' id='thank-msg'>You've seen my portfolio for more than 5 seconds, Thank You!</p>
    </div>
</div>